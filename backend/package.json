{
  "name": "backend",
  "version": "1.0.0",
  "description": "owl管理系统 - 后端",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "db:migrate": "node scripts/db-migrate.js up",
    "db:migrate:down": "node scripts/db-migrate.js down",
    "db:seed": "node scripts/db-seed.js all",
    "db:seed:file": "node scripts/db-seed.js file",
    "db:init": "npm run db:migrate && npm run db:seed",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop owl-backend",
    "pm2:restart": "pm2 restart owl-backend",
    "pm2:logs": "pm2 logs owl-backend",
    "pm2:status": "pm2 status",
    "package": "bash scripts/package.sh",
    "test": "jest"
  },
  "keywords": [
    "express",
    "postgresql",
    "sequelize",
    "admin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.12",
    "sequelize": "^6.35.2",
    "socket.io": "^4.8.1",
    "svg-captcha": "^1.4.0",
    "systeminformation": "^5.27.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3"
  }
}
